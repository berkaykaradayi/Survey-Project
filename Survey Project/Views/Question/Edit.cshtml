@model Survey_Project.Models.Questions
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title"> Edit Question Page</div>
        <hr>
        <form action="/Question/Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id"/>
                   
            <div class="form-group">
                <label for="input-1">Enter Question</label>
                <input type="text" class="form-control" name="Question" id="input-1" placeholder="Enter Your Question" 
                        maxlength="250" required value="@Model.Question">
            </div>
            @*<div class="form-group">
                    <label for="input-2">Code</label>
                    <input type="text" class="form-control" name="Code" id="input-2" placeholder="Enter Your Code (username)" maxlength="25" required>
                </div>
                <div class="form-group">
                    <label for="input-3">Password</label>
                    <input type="password" class="form-control" name="Password" id="input-3" placeholder="Enter Password" maxlength="25" required>
                </div>*@

            <div class="form-group">
                <button type="submit" class="btn btn-round btn-success shadow-success px-5"><i class="icon-lock"></i> Save</button>
            </div>
        </form>
    </div>
</div>
