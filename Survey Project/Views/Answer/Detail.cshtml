@model IEnumerable<Survey_Project.Models.AnswerLine>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int number = 1;
}

<div class="card">
    <div class="card-body">
        <br />
        <h5 class="text-center"> Survey Detail Page </h5>
        <div class="table-responsive">

            @foreach (var item in Model)
            {
                <span><b>@number) </b> @item.Question </span> 
                <br /> <b >&nbsp; &nbsp;  @item.Answers </b>
                <br /> <br /> <br />


                number++;
            }

        </div>
    </div>

</div>